<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View_Controller.SelectReportsController">
   <children>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="600.0" spacing="20.0">
         <children>
            <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onActionSortCustomerApptBtn" prefHeight="50.0" prefWidth="200.0" text="Sort Customer Appointments">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onActionContactApptSchedBtn" prefHeight="50.0" prefWidth="200.0" text="Contact Appointment Schedule">
               <font>
                  <Font name="System Bold" size="11.0" />
               </font>
            </Button>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onActionShowApptsTodayBtn" prefHeight="50.0" prefWidth="200.0" text="Appointments Today">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets top="30.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER_RIGHT" layoutY="300.0" prefHeight="100.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onActionBackBtn" prefHeight="30.0" prefWidth="100.0" text="Back">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
